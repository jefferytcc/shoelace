<div id="mycart">
<div class="container">

    <h4>My Cart</h4>
    <p class="mb0"> You've selected <span class="cart-count"><%=current_user.cart_count%></span> shoes!</p>
  </div>

  <% @cart_shoes.each do |shoe|%>
 <p>
 <% if shoe.photos.nil? %>
    <strong><%=image_tag shoe.photos[0] %></strong>
    <%end%>
    </p>

    <p>
  <strong>Brand:</strong>
  <%= shoe.brand %>
</p>

<p>
  <strong>Description:</strong>
  <%= shoe.description %>
</p>

  <%=link_to "" , data: {targetUrl: remove_from_cart_path(shoe)} do%>
        <i class="fi-x right">clear</i>
<% end %>

      <%end%>

      <%=link_to "Checkout", new_transaction_path, class: "button" unless current_user.get_cart_shoes.blank?%>
      </div>  

      </div>